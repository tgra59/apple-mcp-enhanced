{
  "name": "apple-mcp",
  "version": "0.2.7",
  "module": "index.ts",
  "type": "module",
  "description": "Apple MCP tools for contacts, notes, messages, and mail integration",
  "author": "Dhravya Shah",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dhravya/apple-mcp.git"
  },
  "keywords": [
    "mcp",
    "apple",
    "contacts",
    "notes",
    "messages",
    "mail",
    "claude"
  ],
  "bin": {
    "apple-mcp": "./index.ts"
  },
  "scripts": {
    "dev": "bun run index.ts",
    "lint": "bunx eslint .",
    "typecheck": "bunx tsc --noEmit",
    "format": "bunx prettier --check .",
    "format:write": "bunx prettier --write .",
    "pref": "bun run index.ts",
    "check": "bunx eslint . --fix && bunx prettier --write . && bunx tsc --noEmit",
    "cache:setup": "bun cache-manager.ts update",
    "cache:status": "bun cache-manager.ts status",
    "cache:update": "bun cache-manager.ts update",
    "cache:test": "bun cache-manager.ts test",
    "daemon:start": "bun cache-daemon.ts start",
    "daemon:stop": "bun cache-daemon.ts stop",
    "daemon:restart": "bun cache-daemon.ts restart",
    "daemon:status": "bun cache-daemon.ts status",
    "daemon:config": "bun cache-daemon.ts config",
    "startup": "./startup-service.sh start",
    "setup": "bun setup-cache.ts"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@types/bun": "latest",
    "@types/node": "^22.13.4",
    "@typescript-eslint/parser": "^8.31.0",
    "eslint": "^9.25.1",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "prettier": "latest",
    "typescript": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.8",
    "@jxa/global-type": "^1.3.6",
    "@jxa/run": "^1.3.6",
    "@modelcontextprotocol/sdk": "^1.5.0",
    "@types/express": "^5.0.0",
    "@typescript-eslint/eslint-plugin": "^8.31.0",
    "eslint-plugin": "^1.0.1",
    "eslint-plugin-prettier": "^5.2.6",
    "imapflow": "^1.0.186",
    "keytar": "^7.9.0",
    "mcp-proxy": "^2.4.0",
    "run-applescript": "^7.0.0",
    "zod": "^3.24.2"
  },
  "private": true
}